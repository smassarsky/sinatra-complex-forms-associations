<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="PATCH">
  <label>Name:</label>

  <br>

  <input type="text" name="pet_name" value="<%= @pet.name %>">

  <br>
  <p>Select an existing owner or create a new one below.</p>


  <h3>Existing Owners</h3>
  
  <% @owners.each do |owner| %>
    <input type="radio" id="<%= owner.id %>" name="owner_id" value="<%= owner.id %>" <%='checked' if @pet.owner.id == owner.id %>>
    <label for="<%= owner.id %>"><%= owner.name %></label>
    <br>
  <% end %>

  <br>

  <h3>New Owner</h3>
  <label>Pet Name: </label>
  <br>
  <input type="text" name="owner[name]" id="owner_name">
  <br><br>

  <input type="submit" value="Update Pet">
</form>